cd /NSFS_NAS/chroot

#
find /NSFS_NAS/chroot -path /NSFS_NAS/chroot/.snapshot -prune -o  -name "*.ssh*" -prune -o -mtime +30 -type f -exec rm {} \;
find /NSFS_NAS/database/cparchive -name "testfile????_?M_UTC" -mtime +2 -type f -exec rm {} \;
find /app/ConexusSFTP/preiconvfiles -mtime +5 -type f -exec rm {} \;

