FROM 339713019047.dkr.ecr.us-east-1.amazonaws.com/conexus-jboss:8.0.8

#reconciliation, contract-mod
ARG RECONWAR
ARG CMODWAR
ARG SWAGWAR
USER jboss

ARG EAP_DEPLOY_DIR=/app
ARG EAP_VERSION=8.0
ENV JBOSS_HOME="${EAP_DEPLOY_DIR}/jboss-eap-${EAP_VERSION}"

COPY ${RECONWAR}  ${JBOSS_HOME}/standalone/deployments/reconciliation-war.war
COPY ${CMODWAR}  ${JBOSS_HOME}/standalone/deployments/contract-mod-war.war
COPY ${SWAGWAR}  ${JBOSS_HOME}/standalone/deployments/vendor-emulator-war.war


CMD ["sh", "-c", "${JBOSS_HOME}/bin/standalone.sh -c=standalone-full.xml"]