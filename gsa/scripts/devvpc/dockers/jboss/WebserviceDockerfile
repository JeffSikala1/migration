FROM 339713019047.dkr.ecr.us-east-1.amazonaws.com/conexus-jboss:8.0.8

#ws-services, cnxs-ws, dpa
ARG WSEAR
ARG CNXSEAR
ARG DPAEAR
USER jboss

ARG EAP_DEPLOY_DIR=/app
ARG EAP_VERSION=8.0
ENV JBOSS_HOME="${EAP_DEPLOY_DIR}/jboss-eap-${EAP_VERSION}"

COPY ${WSEAR}  ${JBOSS_HOME}/standalone/deployments/ws-services-ear.ear
COPY ${CNXSEAR}  ${JBOSS_HOME}/standalone/deployments/cnxs-ws-ear.ear
COPY ${DPAEAR}  ${JBOSS_HOME}/standalone/deployments/dpa-ear.ear

CMD ["sh", "-c", "${JBOSS_HOME}/bin/standalone.sh -c=standalone-full.xml"]